<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/icons</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_light</item>
        <item name="android:textColor">@color/icons</item>

    </style>

    <!-- Headers style -->
    <style name="Headers">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Button style -->
    <style name="RadButtons">
        <!-- Customize your theme here. -->
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/icons</item>

    </style>

    <style name="RadioBOcean" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiob_ocean</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/icons</item>
    </style>
    <style name="RadioBFan" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiob_fan</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/icons</item>
    </style>
    <style name="RadioBTV" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiob_tv</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="buttonsStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:backgroundTint">@color/icons</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>
